<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"

    android:background="@android:color/background_dark">
    <!--style="@style/AppTheme"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/track_parent">

            <TextView
                android:id="@+id/track_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textColor="@android:color/primary_text_light"
                android:textSize="24sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="true"
                android:padding="10dip" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toggleTrackView"
                android:src="@drawable/ic_action_expand"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:paddingLeft="10dip"
                android:paddingRight="15dip"
                android:layout_alignTop="@+id/track_title"
                android:layout_alignBottom="@+id/track_title"
                android:layout_alignRight="@+id/track_title"
                android:background="#00ffffff" />



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/track_child"
            android:layout_below="@+id/track_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                android:gravity="center">

                <!-- Equalizer -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/eq_layout"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/space"
                    android:layout_toStartOf="@+id/space">

                    <Button
                        android:id="@+id/eq_button"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="@string/EQ"
                        android:gravity="center"
                        android:textColor="@color/accent_material_dark"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true" />

                    <com.sloths.speedy.shortsounds.view.CrossView
                        android:id="@+id/eq_switch"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:lineColor="@android:color/black"
                        android:layout_below="@+id/Espace"
                        android:layout_centerHorizontal="true"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:id="@+id/Espace"
                        android:layout_below="@id/eq_button"
                        android:layout_alignLeft="@id/eq_button"
                        android:layout_alignStart="@id/eq_button"
                        android:layout_alignRight="@+id/eq_button"
                        android:layout_alignEnd="@+id/eq_button"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <!-- Reverb -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/reverb_layout"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/space"
                    android:layout_toEndOf="@+id/space">

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/reverb_button"
                        android:text="@string/Reverb"
                        android:gravity="center"
                        android:textColor="@color/accent_material_dark"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"/>

                    <com.sloths.speedy.shortsounds.view.CrossView
                        android:id="@+id/reverb_switch"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:lineColor="@android:color/black"
                        android:layout_below="@+id/Rspace"
                        android:layout_centerHorizontal="true"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:id="@+id/Rspace"
                        android:layout_below="@id/reverb_button"
                        android:layout_alignLeft="@id/reverb_switch"
                        android:layout_alignStart="@id/reverb_switch"
                        android:layout_alignRight="@+id/reverb_switch"
                        android:layout_alignEnd="@+id/reverb_switch"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/space" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"
                android:id="@+id/upperTrackView"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true">

                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/volumeSlider"
                        android:layout_weight=".87"
                        android:layout_gravity="center_vertical" />

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/trackSolo"
                        android:layout_weight=".13"
                        android:background="@color/button_material_light"
                        android:textColor="@color/accent_material_light"
                        android:text="@string/solo"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>